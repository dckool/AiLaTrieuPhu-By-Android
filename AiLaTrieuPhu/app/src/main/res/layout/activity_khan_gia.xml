<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nhom17.iuh.ailatrieuphu.KhanGiaActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_x="6dp"
        android:layout_y="18dp"
        android:text="Đáp án A: 0%"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="8dp"
        android:layout_x="4dp"
        android:layout_y="56dp"
        android:text="Đáp án B: 0%           "
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="7dp"
        android:layout_x="4dp"
        android:layout_y="97dp"
        android:text="Đáp án C: 0%           "
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="8dp"
        android:layout_x="5dp"
        android:layout_y="134dp"
        android:text="Đáp án D: 0%           "
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_x="115dp"
        android:layout_y="18dp" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/progressBar3"
        android:layout_x="114dp"
        android:layout_y="57dp" />

    <ProgressBar
        android:id="@+id/progressBar5"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_alignStart="@+id/progressBar4"
        android:layout_x="114dp"
        android:layout_y="97dp" />

    <ProgressBar
        android:id="@+id/progressBar6"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignEnd="@+id/progressBar5"
        android:layout_x="113dp"
        android:layout_y="138dp"
        android:indeterminate="false" />

</AbsoluteLayout>
